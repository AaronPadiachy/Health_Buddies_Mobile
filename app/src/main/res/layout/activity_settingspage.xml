<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/settingsbg"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    tools:context=".settingspage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_centerHorizontal="true"
                    android:elevation="15dp"
                    android:src="@drawable/profile"
                    app:civ_border_color="#9BCDE3"
                    app:civ_border_width="8dp" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/add_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:elevation="15dp"
                    android:layout_below="@id/profile_image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-25dp"
                    android:background="@drawable/btnshapeedit"
                    android:src="@drawable/editicon" />

                <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="70dp"
                app:cardBackgroundColor="@color/backgroundColour"
                app:cardCornerRadius="40dp"
                app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="120dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="370dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/card1"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:layout_marginTop="-25dp"
                                app:cardBackgroundColor="@color/profilebg"
                                app:cardCornerRadius="20dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="30dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginBottom="20dp"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">


                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:paddingStart="5dp"
                                                android:text="Username"
                                                android:textSize="15dp"
                                                android:textStyle="bold" />

                                            <EditText
                                                android:id="@+id/usernametxt"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:background="@drawable/rounded_edittext"
                                                android:ems="10"
                                                android:hint="Username"
                                                android:inputType="textPersonName"
                                                android:paddingStart="16dp"
                                                android:text="Johnny" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="20dp"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:paddingStart="5dp"
                                                android:text="Age"
                                                android:textSize="15dp"
                                                android:textStyle="bold" />

                                            <Spinner
                                                android:id="@+id/ageSpinner"
                                                android:layout_width="79dp"
                                                android:layout_height="wrap_content"
                                                android:background="@drawable/rounded_edittext"
                                                android:paddingStart="16dp"
                                                android:textSize="15dp"
                                                android:textStyle="bold"
                                                android:dropDownVerticalOffset="40dp"
                                                android:entries="@array/age_array" />


                                        </LinearLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:paddingStart="5dp"
                                                android:text="Height"
                                                android:textSize="15dp"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/heighttxt"
                                                android:layout_width="100dp"
                                                android:layout_height="wrap_content"
                                                android:background="@drawable/rounded_edittext"
                                                android:ems="10"
                                                android:hint="Height"
                                                android:textSize="18dp"
                                                android:textStyle="bold"
                                                android:paddingStart="16dp"
                                                android:text="130cm" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="20dp"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:paddingStart="5dp"
                                                android:text="Weight"
                                                android:textSize="15dp"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/weighttxt"
                                                android:layout_width="100dp"
                                                android:layout_height="wrap_content"
                                                android:background="@drawable/rounded_edittext"
                                                android:ems="10"
                                                android:hint="Weight"
                                                android:textSize="18dp"
                                                android:textStyle="bold"
                                                android:paddingStart="16dp"
                                                android:text="34kg" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="20dp"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Gender"
                                                android:textSize="15dp"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/gendertxt"
                                                android:layout_width="51dp"
                                                android:layout_height="30dp"
                                                android:background="@drawable/rounded_edittext"
                                                android:ems="10"
                                                android:hint="Gender"
                                                android:textSize="20dp"
                                                android:textAlignment="center"
                                                android:textStyle="bold"
                                                android:text="M" />

                                        </LinearLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:paddingStart="5dp"
                                                android:text="Email"
                                                android:textSize="15dp"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/emailtxt"
                                                android:layout_width="300dp"
                                                android:layout_height="wrap_content"
                                                android:background="@drawable/rounded_edittext"
                                                android:ems="10"
                                                android:hint="email address"
                                                android:textSize="18dp"
                                                android:textStyle="bold"
                                                android:paddingStart="16dp"
                                                android:text="Johnnysmum@gmail.com" />

                                        </LinearLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="15dp"
                                        android:orientation="horizontal">


                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:paddingStart="5dp"
                                                android:text="Measurement System"
                                                android:textSize="15dp"
                                                android:textStyle="bold" />

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:orientation="vertical">

                                                <Switch
                                                    android:id="@+id/metricswitch"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:background="@drawable/rounded_switch_background"
                                                    android:paddingStart="16dp"
                                                    android:text="Metric"
                                                    android:thumbTint="@color/profileheading" />

                                                <Switch
                                                    android:id="@+id/imperialswitch"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="10dp"
                                                    android:background="@drawable/rounded_switch_background"
                                                    android:paddingStart="16dp"
                                                    android:text="Imperial"
                                                    android:thumbTint="@color/profileheading" />
                                            </LinearLayout>

                                        </LinearLayout>

                                        <androidx.appcompat.widget.AppCompatButton
                                            android:id="@+id/button"
                                            android:layout_width="80dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginLeft="20dp"
                                            android:layout_weight="1"
                                            android:background="@drawable/curved_button_5"
                                            android:paddingStart="5dp"
                                            android:text="Change Password"
                                            android:textColor="@color/white" />

                                    </LinearLayout>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/card1"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="20dp"
                                app:cardBackgroundColor="@color/profileheading"
                                app:cardCornerRadius="20dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="User Profile"
                                    android:textColor="@color/white"
                                    android:textSize="25dp"
                                    android:textStyle="bold" />
                            </androidx.cardview.widget.CardView>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="0dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="370dp"
                                android:layout_height="200dp"
                                android:layout_below="@id/card2"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:layout_marginTop="-25dp"
                                android:layout_marginBottom="20dp"
                                app:cardBackgroundColor="@color/goalbg"
                                app:cardCornerRadius="20dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="30dp"
                                    android:layout_marginRight="20dp"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:paddingStart="5dp"
                                            android:text="Daily Steps"
                                            android:textSize="15dp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/stepstxt"
                                            android:layout_width="150dp"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/rounded_edittext"
                                            android:ems="10"
                                            android:hint="Steps"
                                            android:textSize="18dp"
                                            android:textStyle="bold"
                                            android:paddingStart="16dp"
                                            android:text="10 000 steps" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="10dp"
                                            android:paddingStart="5dp"
                                            android:text="Move Minutes"
                                            android:textSize="15dp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/minutestxt"
                                            android:layout_width="150dp"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/rounded_edittext"
                                            android:ems="10"
                                            android:hint="Move Minutes"
                                            android:textSize="18dp"
                                            android:textStyle="bold"
                                            android:paddingStart="16dp"
                                            android:text="30 minutes" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="10dp"
                                            android:paddingStart="5dp"
                                            android:text="Daily Calories"
                                            android:textSize="15dp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/caloriestxt"
                                            android:layout_width="150dp"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/rounded_edittext"
                                            android:ems="10"
                                            android:hint="Daily calories"
                                            android:textSize="18dp"
                                            android:textStyle="bold"
                                            android:paddingStart="16dp"
                                            android:text="1800 cals" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="20dp"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:paddingStart="5dp"
                                                android:text="Weight"
                                                android:textSize="15dp"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/myweighttxt"
                                                android:layout_width="150dp"
                                                android:layout_height="wrap_content"
                                                android:background="@drawable/rounded_edittext"
                                                android:ems="10"
                                                android:hint="Weight"
                                                android:textSize="18dp"
                                                android:textStyle="bold"
                                                android:paddingStart="16dp"
                                                android:text="30kg" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="10dp"
                                                android:paddingStart="5dp"
                                                android:text="Daily Water Amount"
                                                android:textSize="15dp"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/dailywatertxt"
                                                android:layout_width="150dp"
                                                android:layout_height="wrap_content"
                                                android:background="@drawable/rounded_edittext"
                                                android:ems="10"
                                                android:hint="Daily Water"
                                                android:textSize="18dp"
                                                android:textStyle="bold"
                                                android:paddingStart="16dp"
                                                android:text="2.3l" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="10dp"
                                                android:paddingStart="5dp"
                                                android:text="Hours of Sleep"
                                                android:textSize="15dp"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/sleeptxt"
                                                android:layout_width="150dp"
                                                android:layout_height="wrap_content"
                                                android:background="@drawable/rounded_edittext"
                                                android:ems="10"
                                                android:hint="Hours of Sleep"
                                                android:textSize="18dp"
                                                android:textStyle="bold"
                                                android:paddingStart="16dp"
                                                android:text="1800 cals" />

                                        </LinearLayout>

                                    </LinearLayout>
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/card2"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="20dp"
                                app:cardBackgroundColor="@color/goalsheading"
                                app:cardCornerRadius="20dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="My Goals"
                                    android:textColor="@color/white"
                                    android:textSize="25dp"
                                    android:textStyle="bold" />
                            </androidx.cardview.widget.CardView>

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginBottom="20dp"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/editbtn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:backgroundTint="@color/moveminutescolors"
                                android:text="Edit" />

                            <Button
                                android:id="@+id/savebtn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/stepscolor"
                                android:text="Save" />

                        </LinearLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>